@using EAD_Project.Models
@{
    ViewData["Title"] = "Eye & Apple";
    List<menuItemModel> menuItems = new List<menuItemModel>();
    menuItems.Add(new menuItemModel(1, 960, "Balsamic Chicken Salad (16 oz)", "gluten free, dairy free, nut free", "122.jpg"));
    menuItems.Add(new menuItemModel(2, 170, "Barb's Boobie Milk Lactation Cookies (1/2 Dozen)", "Whole Wheat Oatmeal and Chocolate Chip Lactation Cookies. Highly effective in helping to increase milk supply. Safe for", "151.jpg"));
    menuItems.Add(new menuItemModel(3, 560, "Blackened Chicken Caesar Wrap", "Blackened Chicken with crisp romaine lettuce, whole wheat wrap, shaved parmesan and vegan caesar dressing", "154.jpg"));
    menuItems.Add(new menuItemModel(4, 680, "Blackened Chickpea Caesar Wrap", "Blackened Chickpeas with crisp romaine lettuce, whole wheat wrap, shaved parmesan and vegan caesar dressing", "155.jpg"));
    menuItems.Add(new menuItemModel(5, 370, "Breakfast Egg Florentine (Low Carb)", "turkey sausage patty, tomato, spinach and white cheddar florentine with red pepper aioli", "176.jpg"));

    List<PlanModel> planItems = new List<PlanModel>();
    planItems.Add(new PlanModel(1, "The Lifestyle Plan", 9.76));
    planItems.Add(new PlanModel(2, "The Low Carb Plan", 11.19));
    planItems.Add(new PlanModel(3, "The Pescatarian Plan", 11.19));
    planItems.Add(new PlanModel(4, "The Vegan Plan", 11.19));
    planItems.Add(new PlanModel(5, "The Vegetarian Plan", 11.19));
}

<div class="sliderParent">
    <div class="sliderChild">
        <div class="sliderText">
            <p class="textHeading">Get Started <br>With a Healthier You</p>
            <p class="textDescp">We make eating healthy convenient and delicious so you can have more time to do the things you love.</p>
            <button class="btn textBtn">Get Started</button>
        </div>
    </div>
</div>

<div>
    <span class="d-flex justify-content-center m-5 fs-1 fw-bold">How It Works</span>
</div>

<div class="container-fluid p-5 text-center">
  <div class="row">
    <div class="col-lg-4 col-sm-12">
      <div class="card d-flex align-items-center w-100 border-0" style="width: 18rem;">
          <div class="d-flex align-items-center justify-content-center HIWimage">
            <img src="~/assets/HIWitem1.svg" class="card-img-top w-25 mb-3">
          </div>
          <div class="card-body">
            <h5 class="card-title fs-3">PLACE ORDER</h5>
            <p class="card-text fs-5">Select from our wide variety of signature dishes, custom, or specialty meal options. Pick up in Baton Rouge or choose between in-store pickup or delivery in the New Orleans Metro Area</p>
          </div>
      </div>
    </div>
    <div class="col-lg-4 col-sm-12">
      <div class="card d-flex align-items-center w-100 border-0" style="width: 18rem;">
          <div class="d-flex align-items-center justify-content-center HIWimage">
            <img src="~/assets/HIWitem2.svg" class="card-img-top w-25 mb-3">
          </div>
          <div class="card-body">
            <h5 class="card-title fs-3">COOK</h5>
            <p class="card-text fs-5">Our staff will carefully prepare, cook, and package all of your meals and have them fresh and ready to go!</p>
          </div>
      </div>
    </div>
    <div class="col-lg-4 col-sm-12">
      <div class="card d-flex align-items-center w-100 border-0" style="width: 18rem;">
          <div class="d-flex align-items-center justify-content-center HIWimage">
            <img src="~/assets/HIWitem3.svg" class="card-img-top w-25 mb-3">
          </div>
          <div class="card-body">
            <h5 class="card-title fs-3">PICKUP / DELIVER</h5>
            <p class="card-text fs-5">You choose whether to pick up your meals in our very own brick and mortar location or even choose a delivery method in case you are busy. We never want you to miss out</p>
          </div>
      </div>
    </div>
  </div>
</div>

<div class="sliderParent">
    <div class="sliderChild p-1">
        <div class="container d-flex justify-content-center align-items-center flex-column" style="background-color: white;">
            <p class="textHeading mt-5">Online Menu</p>
            <p class="textDescp">Not interested in a plan? Shop our online menu and pick as many or few meals as you need.</p>
            <div class="menuBoard row">
                @{
                    foreach(var i in menuItems)
                    {
                                        <div class="col-sm-12 card itemCard mb-3 me-3" style="max-width: 400px; max-height: 150px;">
                                            <div class="row g-0">
                                                <div class="col-md-4 itemImage" style="background: url(../assets/menuItems/@i.imagePath); background-size:cover; height:148px">
                                                </div>
                                                <div class="col-md-8 m-0 ps-1 pe-1">
                                                  <div class="card-body m-0 p-0 d-flex flex-column">
                                                    <h5 class="card-title">@i.title</h5>
                                                    <p class="card-text itemDescp m-0">@i.description</p>
                                                    <div class="d-flex justify-content-between align-content-center">
                                                        <p class="card-text"><small class="text-muted">Calories @i.calories</small></p>
                                                        <a class="btn cartIcon">
                                                            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="M7.3 21.125q-.625 0-1.062-.437-.438-.438-.438-1.063 0-.65.438-1.075.437-.425 1.062-.425.65 0 1.075.425.425.425.425 1.075 0 .625-.425 1.063-.425.437-1.075.437Zm9.4 0q-.65 0-1.075-.437-.425-.438-.425-1.063 0-.65.425-1.075.425-.425 1.075-.425.625 0 1.062.425.438.425.438 1.075 0 .625-.438 1.063-.437.437-1.062.437ZM5.875 5.5l2.675 5.625h6.625q.175 0 .313-.088.137-.087.237-.237l2.625-4.75q.1-.225 0-.388-.1-.162-.325-.162Zm-.475-1h13q.725 0 1.038.525.312.525-.013 1.1l-2.85 5.2q-.225.4-.562.6-.338.2-.763.2H8.1L6.875 14.35q-.15.225 0 .5t.425.275h10.9v1H7.3q-.875 0-1.3-.738-.425-.737-.025-1.487l1.5-2.675L3.8 3.5H2v-1h2.45Zm3.15 6.625h7Z"/></svg>
                                                        </a>
                                                    </div>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                    }
                }
            </div>
            <button class="btn textBtn">VIEW ENTIRE MENU</button>
        </div>
    </div>
</div>

<section class="homePlans container-fluid">
    <div class="d-flex flex-column align-items-center">
        <div class="d-flex flex-column align-items-center">
            <h1>Plans for Everyone</h1>
            <p class="text-center">Consistency in your diet starts with a plan. Choose from 2,3, or 4 meals per day for 5,6, or 7 days.<br>
            Plans are subscription based but can be changed at any time to meet your needs.</p>
        </div>
        <div class="d-flex justify-content-around w-100 planItems row">
            @foreach(var i in planItems)
            {
                @Html.Partial("_planItem",i)
            }
        </div>
    </div>
</section>


<section class="whatPeopleSaying ">
    <div class="container d-flex flex-column align-items-center p-5 justify-content-center">
        <h1 class="fs-1 m-5 mb-3">What people are saying</h1>

        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="1000">
              <div class="carousel-caption d-flex flex-column align-items-center">
                <p class="fs-4 text-dark">I have always been so impressed with everything we've ever had from here. Both quality and taste!!!</p>
                <p class="fs-4 fw-bold text-dark">~Emily Hoskins</p>
              </div>
            </div>
            <div class="carousel-item">
              <div class="carousel-caption" data-bs-interval="1000">
                <p class="fs-4 text-dark">I can't say enough good things about this place, friendly and inviting staff that are happy to answer any questions you might have, grab and go meals that will leave you feeling great.  Not to mention I spend less money here than at any fast food place.</p>
                <p class="fs-4 fw-bold text-dark">~Nick Pierce</p>
              </div>
            </div>
            <div class="carousel-item" data-bs-interval="1000">
              <div class="carousel-caption">
                <p class="fs-4 text-dark">Food is prepared perfectly. Makes meal prepping more convenient and saves time. Taste great. Highly recommend.</p>
                <p class="fs-4 fw-bold text-dark">~Monique Encalade</p>
              </div>
            </div>
          </div>

          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
    </div>
    
</section>